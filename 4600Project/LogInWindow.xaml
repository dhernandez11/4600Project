<Window x:Class="_4600Project.LogInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4600Project"
        mc:Ignorable="d"
        Title="LogInWindow" Height="271.643" Width="367.143">
    <Grid Background="WhiteSmoke" Margin="0,0,3,0">
        <Label x:Name="lblLogInName" Content="Calendar Name:" HorizontalAlignment="Left" Margin="74,85,0,0" Foreground="CornflowerBlue" VerticalAlignment="Top" FontSize="14"/>
